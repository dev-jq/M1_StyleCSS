<?xml version="1.0"?>
<config>
	  <tabs>
		<JQ translate="label" module="stylecss">
            <label>JQ</label>
            <sort_order>1</sort_order>
        </JQ>
	  </tabs>
	  <sections>
	  	<stylecss translate="label" module="stylecss">                    
			<label>Style CSS</label>
			<tab>JQ</tab>
			<frontend_type>text</frontend_type>
			<sort_order>15</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>            
			<groups>
				<critical_path translate="label"> 
					<label>Critical path CSS</label>
	            	<expanded>1</expanded>
					<frontend_type>text</frontend_type>
					<sort_order>100</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enable translate="label">
		                    <label>Enable</label>
		                    <frontend_type>select</frontend_type>
		                    <source_model>adminhtml/system_config_source_yesno</source_model>
		                    <sort_order>0</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
		                    <comment>Will work only if 'Merge CSS Files' is enabled</comment>
			            </enable>
			            <style translate="label">
		                    <label>Style general and Homepage</label>
		                    <frontend_type>textarea</frontend_type>
		                    <sort_order>1</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
							<depends><enable>1</enable></depends>
					        <comment>You can generate Critical Path CSS on https://jonassebastianohlsson.com/criticalpathcssgenerator/</comment>
			            </style>
						<style_catalog translate="label">
							<label>Style Catalog Page</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends><enable>1</enable></depends>
						</style_catalog>
						<style_product translate="label">
							<label>Style Product Page</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<depends><enable>1</enable></depends>
						</style_product>
					</fields>
				</critical_path>
				<custom_styles translate="label">
					<label>Custom styles</label>
					<expanded>0</expanded>
					<frontend_type>text</frontend_type>
					<sort_order>101</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enable translate="label">
		                    <label>Enable</label>
		                    <frontend_type>select</frontend_type>
		                    <source_model>adminhtml/system_config_source_yesno</source_model>
		                    <sort_order>0</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
			            </enable>
						<all_pages translate="label">
							<label>For all pages</label>
		                    <frontend_type>textarea</frontend_type>
		                    <sort_order>1</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
							<depends><enable>1</enable></depends>
						</all_pages>
					</fields>
				</custom_styles>
			</groups>
		</stylecss>
	  </sections>
</config>
